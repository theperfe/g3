<html><head><title>Combinations</title></head>
<body><pre id="result"></pre>
<script type="text/javascript">

function combination(l, r){
  console.log(l);
  console.log(r);
  if(r==0) return [];
  else if(l.length == r) return l;
  else{
    var large_arr = [];
    var comb = combination(l.slice(1), r);
    large_arr.push(comb);
    var comb = combination(l.slice(1), r-1);
    if(comb.length == 0) {
    console.log("entered");
    large_arr.push([l[0]]);
    console.log(large_arr);
    }
    for(var c=0; c<comb.length; c++){
     var arr = [];
     arr.push(l[0]);
     arr = arr.concat(comb[c]);
     large_arr.push(arr);
    }
    return large_arr;
  }
}
 
var x = combination([1,2,3,4,5], 4);
for(var i in x)
console.log(x[i]);
</script></body></html>
